<div class="content-area">
  <h2>Exercises</h2>
  {{#paper-list}}
    {{#each model as |exercise|}}
      {{#paper-item class="md-3-line"}}
        <div class="md-list-item-text">
          <h3>
            {{exercise.name}}
          </h3>
        </div>
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
  <p>
    {{#paper-button raised=true
      fab=true
      primary=true
      onClick=(route-action 'addExercise')}}
      {{#paper-icon "add"}}
      {{/paper-icon}}
    {{/paper-button}}
  </p>
</div>
{{#if dialogShowing}}
  {{#paper-dialog onClose=(route-action 'closeDialog')
    fullscreen=true
    clickOutsideToClose=true}}
    {{#paper-dialog-content}}
      <h2 class="md-title">Add an exercise</h2>
      {{paper-input label="Exercise Name"
        value=exerciseModel.name
        onChange=(action (mut exerciseModel.name))
        class="full-width"}}
   {{/paper-dialog-content}}
   {{#paper-dialog-actions class="layout-row"}}
     <span class="flex"></span>
     {{#paper-button onClick=(route-action "closeDialog")}}Cancel{{/paper-button}}
       {{#paper-button primary=true onClick=(route-action "saveExercise" exerciseModel)}}Okay!{{/paper-button}}
   {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
