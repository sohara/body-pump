{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools}}

    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "menu"}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content width=4 as |content|}}
        {{#content.menu-item onClick=(action 'navigate' 'routines' menu.actions.close)}}
          {{paper-icon 'assignment'}}
          <span>Routines</span>
        {{/content.menu-item}}
        {{#content.menu-item onClick=(action 'navigate' 'exercises' menu.actions.close)}}
          {{paper-icon 'directions_run'}}
          <span>Exercises</span>
        {{/content.menu-item}}
      {{/menu.content}}
    {{/paper-menu}}

    <h2>Body Pump</h2>
    <span class="flex"></span>
    {{#paper-button raised=true}}
      Learn More
    {{/paper-button}}
    {{#paper-button mini=true aria-label="Favorite"}}
      {{paper-icon "favorite"}}
    {{/paper-button}}
  {{/toolbar.tools}}
{{/paper-toolbar}}
